{
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "backend/jobs.json",
        "dest":"http://localhost:5000/"
      }
    ],
    "routes": [
      {
        "src": "/jobs",
        "dest": "http://localhost:5000/jobs"
      },
      {
        "src": "/:path*",
        "dest": "http://localhost:5000/:path*"
      }
    ],
    "rewrites": [
      {
        "source": "/:path*",
        "destination": "http://localhost:5000/:path*"
      }
    ],
    "devCommand": {
      "frontend": "npm run dev",
      "backend": "npm run server"
    }
  }
  